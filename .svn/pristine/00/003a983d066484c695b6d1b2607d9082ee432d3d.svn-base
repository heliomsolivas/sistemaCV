function exibe(url, title, height, width, id) {
	if (document.getElementById(id) == null) {
		var w = $("<div id='" + id + "'></div>").appendTo("#container");
		
		$('#' + id).waitMe({effect :'ios',text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
		
		w.kendoWindow({
			minHeight: 0,
			minWidth: 300,
			maxHeight: 520,
			pinned: true,
			width: width,
			height: height,
		 	position: {
				top: 150,
				left: 480,
		  	},
			resizable: false,
			visible: false,
			content: url,
			title: title,
			actions: ["Minimize", "Close"],
			close: function() {
				w.data("kendoWindow").destroy();
			}
		});
		w.data("kendoWindow").open();
	} else {
		$("#" + id).data("kendoWindow").toFront();
		$("#" + id).data("kendoWindow").restore();
	}
}

function consultar(url, title, x, width, height, id) {
	if (document.getElementById(id) == null) {
		var w = $("<div id='" + id + "'></div>").appendTo("#container");
		
		LeftPosition = (screen.width) ? (screen.width-width)/2 : 0;
		TopPosition = (screen.height) ? (screen.height-height)/2 : 0;
		
		$('#' + id).waitMe({effect :'ios',text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
		
		w.kendoWindow({
			modal: true,
			height: x,
			width: width,
			position: {
				top: TopPosition,
				left: LeftPosition,
			},
			resizable: false,
			visible: false,
			content: url,
			title: title,
			actions: ["Close"],
			close: function() {
				w.data("kendoWindow").destroy();
			}
		});
		w.data("kendoWindow").open();
	} else {
		$("#" + id).data("kendoWindow").toFront();
		$("#" + id).data("kendoWindow").restore();
	}
}

