function infoAcomodacao(url, title, id) {
	var w = $("<div id='" + id + "'></div>").appendTo("#container");
	
	$('#' + id).waitMe({effect :'ios',text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
	
	w.kendoWindow({
		modal: true,
		height: "390px",
		position: {
			top: 180,
			left: 500,
		},
		resizable: false,
		visible: false,
		content: url,
		title: title,
		actions: ["Close"],
		close: function() {
			w.data("kendoWindow").destroy();
		}
	});
	w.data("kendoWindow").open();
}

