<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="f"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<html lang="pt-br">
	<head>
		<title><f:message key="nomeSistema"/></title>
		<meta http-equiv="Cache-control" content="no-cache">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

		<link rel="stylesheet" type="text/css" media="screen" href="<c:url value="/css/displaytag.css"/>">

	 	<script type="text/javascript">
	 		$(document).ready(function () {
				var nulo = "1";
				$("#hospedagemList").load("<c:url value="/clientes/divListaHospedagem/"/>" + nulo);
				
	        	$("#filtroHospedagem").keyup(function() {
	        		var $this = $( this );
					var filtroHospedagem = $this.val().replace(/[^a-z0-9]+/gi,'');
					$this.val(filtroHospedagem);
					
					if (filtroHospedagem != ''){
						$("#hospedagemList").load("<c:url value="/clientes/divListaHospedagem/"/>" + filtroHospedagem);
					} else {
						$("#hospedagemList").load("<c:url value="/clientes/divListaHospedagem/"/>" + nulo);
					}
				})
	        });
		</script>
	</head>
	<body class="divConteudo">
		<div style="width: 630px; margin-left: 15px; margin-right: 15px; margin-top: 10px;">
			<a href="#" class="k-button k-button-icontext k-add" onclick="exibe('<c:url value="/clientes/cadastrarHospedagem"/>', 'Cadastrar Hospedagem', 'auto', 'auto', 'cadastrarHospedagem');" style="margin-right: 15px;">
				<span class="k-icon k-add"></span>Nova
			</a>
			<span class="k-textbox k-space-right" style="width: 350px;">
                <input id="filtroHospedagem" type="text" placeholder="Nome do Hóspede ou Nome da Acomodação"/>
                <span class="k-icon k-i-search"></span>
            </span>
			</br>
			</br>
			<div id="hospedagemList"></div>
		</div>
	</body>
</html>