<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt"  prefix="f" %>

<html lang="pt-br">
	<head>
		<title><f:message key="nomeSistema"/></title>
		<meta http-equiv="Cache-control" content="no-cache">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		
		<script type="text/javascript" src="<c:url value="/js/funcoesValidacao.js"/>"></script>
		<script type="text/javascript" src="<c:url value="/js/jquery.maskedinput-1.2.2.js"/>">></script>
		<script type="text/javascript">
			$(document).ready(function () {
				$("#data").kendoDatePicker({
				     format: "dd/MM/yyyy HH:mm"
				});
				$("#valor").kendoNumericTextBox({
                        format: "c",
                        decimals: 3
                });
                
			});
			
			function gravar() {
				// funcao para salvar formulario
		        validator =   $("#formMovimentacao").kendoValidator({ // aqui e chamda a funcao que valida o formulario
			     messages: {
			         // mensagem para campo requerido
		         	required: "<f:message key= "campoObrigatorio"/>"
			         // 		validacao de email testar
			         //  	 email: function(input) {
			         //       return getMessage(input);
			         //   }
			     } }).data("kendoValidator");   
					if (validator.validate()) {  // se nao tiver nenhum campo obrigatorio sem preencher executa a funcao para salvar
					 	$.ajax({
						contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
						type: "POST",
						url: "<c:url value="/financeiro/gravarMovimentacao"/>",
						data: $("#formMovimentacao").serialize(),
						success: function(retorno) {									
								 }
						});	 
			    	} 
			}
		</script>
	</head>
	<body class="divConteudo">
    	<form id="formMovimentacao" name="formMovimentacao" action="#">
    		<table border="0" cellspacing="0" cellpadding="0" style="width: 600px;">
    			<tr valign="bottom" style="height: 25px;">
    				<td rowspan="30" style="width: 15px;"></td>
	   				<td style="width: 195px;">
	   					Conta Bancária
	   				</td>
	   				<td style="width: 195px;">
	   					Categoria
	   				</td>
	   				<td style="width: 195px;">
	   					Tipo da Movimentação
	   				</td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td style="width: 195px;">
	   					<select name="movimentacao.contaBancaria.id" style="width: 175px;">
							<option value=""><f:message key="selecione"/></option>
							<c:forEach items="${contaBancariaList}" var="item">
							<option value="${item.id}">${item.agencia} / ${item.numeroConta}</option>
							</c:forEach>
						</select>
	   				</td>
	   				<td style="width: 195px;">
   						<select name="movimentacao.categoria.id" style="width: 175px;">
							<option value=""><f:message key="selecione"/></option>
							<c:forEach items="${categoriaList}" var="item">
							<option value="${item.id}">${item.nome}</option>
							</c:forEach>
						</select>	   			 					
	   				</td>
	   				<td style="width: 195px;">
	   					<select name="movimentacao.tipo.id" style="width: 175px;">
							<option value=""><f:message key="selecione"/></option>
							<c:forEach items="${tipoMovimentacaoList}" var="item">
							<option value="${item.id}">${item.nome}</option>
							</c:forEach>
						</select>
	   				</td>	   				
	   			</tr>
	   			<tr valign="bottom" style="height: 25px;">
	   				<td colspan="2" style="width: 390px;">
	   					Número do Documento
	   				</td>
	   				<td style="width: 195px;">
	   					Data
	   				</td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="2" style="width: 390px;">
	   					<input type="text" class="k-textbox" name="movimentacao.numeroDocumento" required style="width: 370px;"/>
	   				</td>
	   				<td style="width: 195px;">
	   					<input id="data" type="text" name="movimentacao.data" required style="width: 175px;"/>
	   				</td>
	   			</tr>	   				   			
	   			<tr valign="bottom" style="height: 25px;">
	   				<td colspan="3" style="width: 585px;">
	   					Observações
	   				</td>	   				
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="3" style="width: 585px;">
	   					<textarea class="k-textbox" name="movimentacao.observacao" style="width: 565px; height: 60px;"/>
	   				</td>
	   			</tr>
	   			<tr valign="bottom" style="height: 30px;">
            		<td colspan="3">
            			<label style="width: 175px; margin-left: 390px;">
            				<b>Valor</b>
            			</label>
            		</td>
            	</tr>
	   			<tr style="height: 10px;">
            		<td colspan="3">
            			<span style="width: 120px; margin-left: 390px;">
            				<input id="valor" type="text" min="0" value="" name="movimentacao.valor" placeholder="R$ 00,00" required style="width: 175px;"/>
            			</span>
            		</td>
            	</tr>
            	<tr style="height: 100px;">
            		<td colspan="3" style="text-align: center;">
            			<button type="reset" name="limpar" class="k-button"><span class='k-icon k-cancel'></span><f:message key="limpar"/></button>
	            		<button type="button" class="k-button" onclick="gravar()"><span class='k-icon k-update'></span><f:message key="gravar"/></button>
            		</td>
            	</tr>
	   		</table>
	    </form>
	</body>
</html>