<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="f" %>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<html lang="pt-br">
	<head>
		<title><f:message key="nomeSistema"/></title>
		<meta http-equiv="Cache-control" content="no-cache">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

		<link rel="stylesheet" type="text/css" media="screen" href="<c:url value="/css/displaytag.css"/>">

	 	<script type="text/javascript">
	 		 $(document).ready(function () {
	 		 	var nulo = "0";
				$("#usuarioList").load("<c:url value="/usuario/divListaUsuario/0"/>");
				
	        	$("#filtroUsuario").keyup(function(){
	        		var $this = $(this);
					var filtroUsuario = $this.val().replace(new RegExp(" ","g"),"+");
					
					if (filtroUsuario != ''){
						$("#usuarioList").load("<c:url value="/usuario/divListaUsuario/"/>" + filtroUsuario);
					} else {
						$("#usuarioList").load("<c:url value="/usuario/divListaUsuario/0"/>");
					}
				})
	        });
		</script>
	</head>
	<body class="divConteudo">
		<div style="width: 630px; margin-left: 15px; margin-right: 15px; margin-top: 10px;">
			<a href="#" class="k-button k-button-icontext k-add" onclick="exibe('<c:url value="/usuario/novo"/>','Cadastrar Novo Usuário', '400px', 'auto', 'novoUsuario');">
				<span class="k-icon k-add"></span>Novo
			</a>
			<div class="k-textbox k-space-right" style="width: 350px; margin-left: 20px;">
                <input id="filtroUsuario" type="text" placeholder="Nome do Usuário"/>
                <span class="k-icon k-i-search"></span>
            </div>
			</br>
			</br>
			<div id="usuarioList"></div>
		</div>
	</body>
</html>