}

//Somente Numeros
function campoNumerico(event){
	var browser = navigator.appName;
	var keynum;

	if (browser == "Netscape"){
		keynum = event.charCode;
	}else{
		keynum = event.keyCode;
	}

	if ((keynum >= 48) && (keynum <= 57) || (keynum == 0)){
		return true;
	}else{
		return false;
	}
}
