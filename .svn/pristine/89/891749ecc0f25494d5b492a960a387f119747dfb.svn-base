<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt"  prefix="f" %>

<html lang="pt-br">
	<head>
		<script type="text/javascript">
			$(document).ready(function () {
				$("#valorPensao").maskMoney({prefix:'R$ ', allowNegative: true, thousands:'.', decimal:',', allowZero: true, affixesStay: true});
				
				var options = {position: {x:'center', y:'top'}, lang: 'hr', errorMessages: {hr: {'required': '<f:message key="campo.obrigatorio"/>' }}};
			    
				$("#formTipoPensao").bValidator(options);
				
				$("#formTipoPensao").submit(function() {
					if($("#formTipoPensao").data("bValidator").isValid()){
						$("#cadastrarTipoPensao").waitMe({effect :'ios', text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
					 	$.ajax({
							contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
							type: "POST",
							url: "<c:url value="/hotel/tipo/pensao/gravar"/>",
							data: $("#formTipoPensao").serialize(),
							success: function (retorno) {
										$("#cadastrarTipoPensao").data("kendoWindow").destroy();
										$("#listaTipoPensao").waitMe({effect :'ios', text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
										$("#listaTipoPensao").load("<c:url value="/hotel/tipo/pensao/lista"/>");
				           			}
						});
					}
					return false;
				});
			});
		</script>
	</head>
	<body class="divConteudo">
    	<form id="formTipoPensao" name="formTipoPensao" action="#">
    		<table border="0" cellspacing="0" cellpadding="0" style="width: 600px;">
	   			<tr valign="bottom" style="height: 20px;">
	   				<td rowspan="6" style="width: 15px;"></td>
	   				<td colspan="2" style="width: 390px;">
	   					<f:message key="campo.nome.tipo.pensao"/>
	   				</td>
	   				<td style="width: 180px;">
	   					<f:message key="campo.valor"/>
	   				</td>
	   				<td rowspan="6" style="width: 15px;"></td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="2" style="width: 390px;">
	   					<input type="hidden" name="tipoPensao.hotel.id" value="${hotel.id}"/>
	   					<input type="text" class="k-textbox" data-bvalidator="required" name="tipoPensao.nome" style="width: 370px;"/>
	   				</td>
	   				<td style="width: 180px;">
	   					<input id="valorPensao" type="text" class="k-textbox" data-bvalidator="required" name="tipoPensao.valor" placeholder="R$ 0,00" style="width: 180px;"/>
	   				</td>
	   			</tr>
	   			<tr style="height: 20px;"></tr>
   				<tr style="height: 20px;">
            		<td colspan="3" style="text-align: center;">
            			<button type="reset" name="limpar" class="k-button"><span class='k-icon k-cancel'></span> <f:message key="limpar"/></button>
	            		<button type="submit" class="k-button"><span class='k-icon k-update'></span> <f:message key="gravar"/></button>
            		</td>
        		</tr>
	   		</table>
	    </form>
	</body>
</html>