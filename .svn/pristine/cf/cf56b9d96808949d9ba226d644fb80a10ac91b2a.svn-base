<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="f" %>

<html lang="pt-br">
	<head>		
		<script type="text/javascript">
			$(document).ready(function() {
				$("#tabelaFabricante").tablesorter({
					headers: {
						2: {sorter: false, filter: false}
					},
			   		widthFixed : true,
			   		widgets: ["filter"],
					ignoreCase: false,
				   	widgetOptions : {
				     	filter_childRows : false,
				     	filter_columnFilters : true,
				     	filter_cssFilter : '', // or []
				     	filter_external : '',
				     	filter_filteredRow   : 'filtered',
				     	filter_formatter : null,
				     	filter_functions : null,
				     	filter_hideFilters : true,
				     	filter_ignoreCase : true,
				     	filter_liveSearch : true,
				     	filter_onlyAvail : 'filter-onlyAvail',
				     	filter_reset : '',
				     	filter_saveFilters : true,
				     	filter_searchDelay : 300,
				     	filter_serversideFiltering: false,
				     	filter_startsWith : false,
				     	filter_useParsedData : false,
				     	filter_defaultAttrib : 'data-value'
				   }
				})
				.tablesorterPager({
					container: $("#paginacaoFabricante"),
					output: '{startRow} - {endRow} de {totalRows} linhas',
					positionFixed: false,
					removeRows: false,
					savePages: false,
					size: 10
				});
			});

			function excluirFabricante(id) {
				$.confirm({
		            'title': '<f:message key="excluir"/>',
		            'message': '<f:message key="mensagem.excluir.item"/>',
		            'buttons': {
		                'Sim': {
		                    'class'	: 'confirm',
		                    'action': function(){
		                    	$("#listaFabricante").waitMe({effect :'ios', text :'', bg :'rgba(255,255,255,0.5)', color :'#000', sizeW :'', sizeH :''});
		                    	$.ajax({
		    						contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
		    						type: "POST",
		    						url: "<c:url value="/estoque/fabricante/remover"/>",
		    						data: {id: id},
		    						success: function(retorno) {
		    									$("#listaFabricante").load("<c:url value="/estoque/fabricante/lista"/>");
		    								},
    								  error: function(retorno) {
  								 				jAlert('<f:message key="mensagem.erro.excluir.item"/>', '<f:message key="erro"/>');
  								 				$("#listaFabricante").load("<c:url value="/estoque/fabricante/lista"/>");
					                		}
		    					});
		                    }
		                },
		                'Não'	: {
		                    'class'	: 'cancel',
		                    'action': function(){}
		                }
		            }
		        });
			}
		</script>
	</head>
	<body class="divConteudo">
		<div class="divLista">
			<table class="tabela" id="tabelaFabricante">
				<thead>
					<tr style="height: 30px;">
						<th style="width: 90px;"><f:message key="titulo.lista.codigo.fabricante"/></th>
						<th style="width: 480px;"><f:message key="titulo.lista.nome.fabricante"/></th>
						<th style="width: 70px;"></th>
					</tr>
				</thead>
				<tbody>
					<c:forEach items="${fabricanteList}" var="fabricante">
						<tr style="height: 35px;">
							<td style="width: 90px; text-align:center;">${fabricante.codigo}</td>
							<td style="width: 480px; text-align:center;">${fabricante.nome}</td>
							<td style="width: 70px; text-align:center;">
								<a href="#" class="k-button k-button-icontext k-edit" style="width: 25px;" onclick="consultar('<c:url value="/estoque/fabricante/consultar/${fabricante.id}"/>', 'Informações do Fabricante', '130px', '615', '340', 'consultarFabricante');">
									<span class="k-icon k-edit"></span>
								</a>
								<a href="#" class="k-button k-button-icontext k-delete" style="width: 25px;" onclick="excluirFabricante(${fabricante.id})">
									<span class="k-icon k-delete"></span>
								</a>
							</td>
						</tr>
					</c:forEach>
				</tbody>
			</table>
		</div>
		<div id="paginacaoFabricante" style="margin-left: 225px;">
			<div class="first"></div>
			<div class="prev"></div>
			<input type="text" class="pagedisplay"/>
			<div class="next"></div>
			<div class="last"></div>
		</div>
	</body>
</html>