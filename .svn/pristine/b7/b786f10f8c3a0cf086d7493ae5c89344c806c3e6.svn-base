<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt"  prefix="f" %>

<html lang="pt-br">
	<head>
		<script type="text/javascript">
			$(document).ready(function () {				
	 			var options = {position: {x:'center', y:'top'}, lang: 'hr', errorMessages: {hr: {'required':   '<f:message key="campo.obrigatorio"/>' }}};
				    
				$("#formAlterarHistorico").bValidator(options);
					
				$("#formAlterarHistorico").submit(function() {
					if($("#formAlterarHistorico").data("bValidator").isValid()){
						$("#botaoAlterarHistorico").get(0).disabled = true;
					 	$.ajax({
							contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
							type: "POST",
							url: "<c:url value="/contabil/historico/gravar"/>",
							data: $("#formAlterarHistorico").serialize(),
							success: function(retorno) {
										$("#consultarHistorico").data("kendoWindow").destroy();
										$("#listaHistorico").load("<c:url value="/contabil/historico/lista"/>");
				           			}
						});
					}
					return false;
				});
	        });
		</script>
	</head>
	<body class="divConteudo">
    	<form id="formAlterarHistorico" name="formAlterarHistorico" action="#">
    		<table border="0" cellspacing="0" cellpadding="0" style="width: 600px;">
	   			<tr valign="bottom" style="height: 20px;">
	   				<td rowspan="14" style="width: 15px;"></td>
	   				<td colspan="3" style="width: 570px;">
	   					<f:message key="campo.nome.historico"/>
	   				</td>
	   				<td rowspan="14" style="width: 15px;"></td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="3" style="width: 570px;">
	   					<input type="hidden" value="${historico.id}" name="historico.id"/>
	   					<input type="text" class="k-textbox" data-bvalidator="required" name="historico.nome" value="${historico.nome}" style="width: 570px;"/>
	   				</td>
	   			</tr>	
	   			<tr valign="bottom" style="height: 25px;">
	   				<td colspan="3" style="width: 570px;">
	   					<f:message key="campo.descricao"/>
	   				</td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="3" style="width: 570px;">
	   					<textarea class="k-textbox" name="historico.descricao" style="width: 570px; height: 60px;">${historico.descricao}</textarea>
	   				</td>
	   			</tr>
	   			<tr style="height: 30px;"></tr>
   				<tr style="height: 20px;">
            		<td colspan="3" style="text-align: center;">
	            		<button id="botaoAlterarHistorico" type="submit" class="k-button"><span class='k-icon k-update'> </span><f:message key="alterar"/></button>
            		</td>
            	</tr>
	   		</table>
	    </form>
	</body>
</html>