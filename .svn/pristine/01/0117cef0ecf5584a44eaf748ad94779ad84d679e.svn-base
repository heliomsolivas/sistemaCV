<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt"  prefix="f" %>

<html lang="pt-br">
	<head>
		<title><f:message key="nomeSistema"/></title>
		<meta http-equiv="Cache-control" content="no-cache">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		
		<script type="text/javascript">
			$(document).ready(function () {
				
			});
			
			function gravar() {
				// funcao para salvar formulario
		        validator = $("#formProduto").kendoValidator({ // aqui e chamada a funcao que valida o formulario
			     messages: {
			         // mensagem para campo requerido
		         	required: "<f:message key="campoObrigatorio"/>"
			         // 		validacao de email testar
			         //  	 email: function(input) {
			         //       return getMessage(input);
			         //   }
			     } }).data("kendoValidator");
					if (validator.validate()) {  // se nao tiver nenhum campo obrigatorio sem preencher executa a funcao para salvar
					 	$.ajax({
						contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
						type: "POST",
						url: "<c:url value="/estoque/gravarProduto"/>",
						data: $("#formProduto").serialize(),
						success: function (retorno) {
				                 	w.data("kendoWindow").destroy();
				           		}
						});
			    	}
			}
		</script>
	</head>
	<body class="divConteudo">
	   <form id="formProduto" name="formProduto" action="#">
	   		<table border="0" cellspacing="0" cellpadding="0" style="width: 600px;">
	   			<tr valign="bottom" style="height: 20px;">
	   				<td rowspan="21" style="width: 15px;"></td>
	   				<td colspan="2" style="width: 390px;">
	   					Nome do Produto
	   				</td>
	   				<td style="width: 195px;">
	   					Categoria
	   				</td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="2" style="width: 390px;">
	   					<input type="text" class="k-textbox" name="produto.nome" required style="width: 370px;"/>
	   				</td>
	   				<td style="width: 195px;">
	   					<input type="text" class="k-textbox" name="produto.categoria" required style="width: 175px;"/>
	   				</td>
	   			</tr>
	   			<tr valign="bottom" style="height: 25px;">
	   				<td colspan="2" style="width: 390px;">
	   					Fabricante
	   				</td>
	   				<td style="width: 195px;">
	   					Produto Ativo ?
	   				</td>
	   			</tr>
	   			<tr style="height: 10px;">
	   				<td colspan="2" style="width: 390px;">
	   					<select name="produto.fabricante.id" style="width: 370px;">
							<option value=""><f:message key="selecione"/></option>
							<c:forEach items="${fabricanteList}" var="item">
							<option value="${item.id}">${item.nome}</option>
							</c:forEach>
						</select>
	   				</td>
	   				<td style="195px;">
	   					<select name="produto.ativo" required style="width: 175px;">
							<option value=""><f:message key="selecione"/></option>
							<option value="true" <c:if test="${produto.ativo == true}">selected</c:if>>Sim</option>
							<option value="false" <c:if test="${produto.ativo == false}">selected</c:if>>NÃ£o</option>
						</select>
	   				</td>
	   			</tr>
	   			<tr style="height: 80px;">
	   				<td colspan="3" style="width: 565px; text-align: center;">
	   					<button type="reset" name="limpar" class="k-button"><span class='k-icon k-cancel'></span><f:message key="limpar"/></button>
	   					<button type="button" class="k-button" onclick="gravar()"><span class='k-icon k-update'></span><f:message key="gravar"/></button>
	   				</td>
	   			</tr>
	   		</table>
	    </form>
	</body>
</html>