			function exibe(url, title, tamanho, id) {
				if (document.getElementById(id) == null){
					var w = $("<div id='" + id + "'></div>").appendTo("#container");
					w.kendoWindow({
						minHeight: 0,
						minWidth: 340,
						pinned: true,
						width: "auto",
	                    height: tamanho,
					 	position: {
				    		top: 150,
				    		left: 500,
					  	},
	                    resizable: false,
	                    visible: false,
	                    content: url,
	                    title: title,
	                    actions: ["Minimize", "Close"],
	                    close: function() {
							w.data("kendoWindow").destroy();
	                    }
	                });
	                w.data("kendoWindow").open();
               } else {
               		$("#" + id).data("kendoWindow").toFront();
               }
               		
			}
			
			function consultar(url, title, x, width, height, id) {			
				var w = $("<div id='" + id + "'></div>").appendTo("#container");
				
				LeftPosition = (screen.width) ? (screen.width-width)/2 : 0;
				TopPosition = (screen.height) ? (screen.height-height)/2 : 0;
				
				w.kendoWindow({
				  	modal: true,
                    height: x,
                    position: {
			    		top: TopPosition,
			    		left: LeftPosition,
				  	},
                    resizable: false,
                    visible: false,
                    content: url,
                    title: title,
                    actions: ["Close"],
                    close: function() {
						w.data("kendoWindow").destroy();
                    }
                });
                w.data("kendoWindow").open();
             	
			}
			
			function infoAcomodacao(url, title, id) {
				var w = $("<div id='" + id + "'></div>").appendTo("#container");
				w.kendoWindow({
				  	modal: true,
                    height: "390px",
                    position: {
			    		top: 180,
			    		left: 500,
				  	},
                    resizable: false,
                    visible: false,
                    content: url,
                    title: title,
                    actions: ["Close"],
                    close: function() {
						w.data("kendoWindow").destroy();
                    }
                });
                w.data("kendoWindow").open();
			}
			
			function excluir (url, urlRetorno, id) {
				var r = confirm("Deseja Excluir este item ?");
				if(r == true) {
					$.ajax({
						contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
						type: "POST",
						url: url,
						success: function(retorno) {
									$("#" + id).load(urlRetorno);
								 }
						});
				}
				
			}
						
			function checkOut () {
